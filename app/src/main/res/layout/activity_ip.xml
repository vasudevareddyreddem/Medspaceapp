<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.medarogya.appointment.activity.IPActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/toolbar"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            >
            <ImageView
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/back"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:id="@+id/ip_lab_header"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                />


        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/toolbar"
        android:id="@+id/ip_ll"
        android:weightSum="9"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:id="@+id/ip_tot_bal"
            android:textColor="@color/colorBlack"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:id="@+id/ip_used_bal"
            android:textColor="@color/colorBlack"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:id="@+id/ip_remaining_bal"
            android:textColor="@color/colorBlack"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_height="wrap_content" />




    </LinearLayout>

    <LinearLayout
        android:id="@+id/ip_city_ll"
        android:layout_below="@id/ip_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_space"
        android:background="@drawable/sign_text_shape"
        android:onClick="openSingleChoice"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/ip_city_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Select City"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:padding="8dp"
            android:src="@drawable/dropdown_icon" />
    </LinearLayout>

    <LinearLayout

        android:id="@+id/ip_hos_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ip_city_ll"
        android:layout_margin="@dimen/margin_space"
        android:background="@drawable/sign_text_shape"
        android:onClick="openSingleChoice"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/ip_hos_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Select Hospitals"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:padding="8dp"
            android:src="@drawable/dropdown_icon" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_generate_coupon"
        android:layout_width="180dp"
        android:layout_marginBottom="10dp"
        android:layout_height="35dp"
        android:layout_below="@+id/ip_hos_ll"
        android:layout_centerHorizontal="true"
        android:background="@drawable/sign_button_shape"
        android:gravity="center"
        android:text="Generate coupon"
        android:textColor="@color/colorWhite" />

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/btn_generate_coupon"
        android:id="@+id/Ip_rcview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
