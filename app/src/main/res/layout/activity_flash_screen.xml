<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/colorWhite"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activity.FlashScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:src="@drawable/medspacenewlogo"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"

            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="@string/caption"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/caption_size"
            android:visibility="invisible" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_no_internet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:orientation="vertical"

        android:visibility="gone">

        <TextView
            android:id="@+id/txt_no_internet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:gravity="center"
android:textSize="16sp"
            android:text="No Internet Connection Found.\n Please Turn On Your Internet."
            android:textColor="#ca0404"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tryagain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sign_text_shape"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text=" Try Again "
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"

            />


    </LinearLayout>
</RelativeLayout>