<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.OpRegistrationActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:cardCornerRadius="0dp">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/op_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorWhite" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_above="@+id/btn_add_op_lay"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/city_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_space"
                android:background="@drawable/sign_text_shape"
                android:onClick="openSingleChoice"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/city_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Select City"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="10dp"
                    android:padding="8dp"
                    android:src="@drawable/dropdown_icon" />
            </LinearLayout>

            <LinearLayout

                android:id="@+id/hos_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_space"
                android:background="@drawable/sign_text_shape"
                android:onClick="openSingleChoice"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/hos_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Select Hospitals"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="10dp"
                    android:padding="8dp"
                    android:src="@drawable/dropdown_icon" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/dept_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_space"
                android:background="@drawable/sign_text_shape"
                android:onClick="openSingleChoice"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/dept_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Select Department"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="10dp"
                    android:padding="8dp"
                    android:src="@drawable/dropdown_icon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/spl_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_space"
                android:background="@drawable/sign_text_shape"
                android:onClick="openSingleChoice"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/spl_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Select Specialist"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="10dp"
                    android:padding="8dp"
                    android:src="@drawable/dropdown_icon" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/doctor_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_space"
                android:background="@drawable/sign_text_shape"
                android:onClick="openSingleChoice"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/doctor_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Select Doctor"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="10dp"
                    android:padding="8dp"
                    android:src="@drawable/dropdown_icon" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_space"
                android:background="@drawable/sign_text_shape"
                android:padding="12dp">

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:textCursorDrawable="@color/colorPrimary"
                    android:focusableInTouchMode="true"
                    android:background="@color/colorWhite"
                    android:gravity="left"
                    android:maxLength="30"
                    android:hint="Patient Name"
                    android:inputType="textPersonName"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"

                android:layout_margin="@dimen/margin_space"
                android:background="@drawable/sign_text_shape"
                android:padding="12dp">

                <EditText
                    android:id="@+id/cardNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:gravity="left"
                    android:maxLength="15"
                    android:hint="Card Number"
                    android:inputType="number"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_space"
                android:background="@drawable/sign_text_shape"
                android:padding="12dp">

                <EditText
                    android:id="@+id/age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:textCursorDrawable="@color/colorPrimary"
                    android:focusableInTouchMode="true"
                    android:background="@color/colorWhite"                    android:gravity="left"
                    android:maxLength="2"
                    android:hint="Age"
                    android:inputType="number"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_space"
                android:background="@drawable/sign_text_shape"
                android:padding="12dp">

                <EditText
                    android:id="@+id/date_of_reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@color/colorWhite"
                    android:clickable="true"
                    android:focusableInTouchMode="false"
                    android:hint="Date of Appointment"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/time_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_space"
                android:background="@drawable/sign_text_shape"
                android:onClick="openSingleChoice"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/time_txt"
                    android:layout_width="249dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Select Time"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="10dp"
                    android:padding="8dp"
                    android:src="@drawable/dropdown_icon" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2"
                android:visibility="gone"
                android:id="@+id/ll_radiobutton"
                android:layout_marginTop="5dp"
                >
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_margin="5dp"
                    android:id="@+id/radioGroup"
                    >
                    <RadioButton
                        android:id="@+id/radio_hospital"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="pay at hospital"
                        android:padding="10dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        />
                    <RadioButton
                        android:id="@+id/radio_online"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:layout_margin="5dp"
                        android:text="online payment" />
                </RadioGroup>
            </LinearLayout>


            <CheckBox
                android:layout_width="wrap_content"
                android:layout_margin="@dimen/margin_space"
                android:padding="10dp"
                android:enabled="false"
                android:onClick="showConsultationFee"
                android:id="@+id/check_fee_box"
                android:text="Check consultation fee before confirmation."
                android:layout_height="wrap_content" />

     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:textSize="18sp"
         android:layout_margin="@dimen/margin_space"
         android:padding="10dp"
         android:textColor="#111"
         android:visibility="invisible"
         android:id="@+id/txt_consultationfee"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:visibility="gone"
                android:background="@drawable/boxborder_shape"
                android:layout_margin="@dimen/margin_space"
                android:padding="10dp"
                android:textColor="#111"
                android:hint="Enter Coupen here"
                android:id="@+id/edt_coupon_enter"/>
        </LinearLayout>


    </ScrollView>

    <RelativeLayout
        android:id="@+id/btn_add_op_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/margin_space"
        android:padding="@dimen/margin_space">

        <Button
            android:id="@+id/btn_add_op"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:enabled="false"
            android:background="@drawable/disable_burtton_shape"
            android:gravity="center"
            android:visibility="gone"
            android:text="@string/add_op"
            android:textAllCaps="false"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textColor="@color/colorWhite" />
 <Button
            android:id="@+id/btn_pay_online"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:enabled="false"
            android:background="@drawable/disable_burtton_shape"
            android:gravity="center"
     android:visibility="gone"
            android:text="Pay Now"
            android:textAllCaps="false"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textColor="@color/colorWhite" />

    </RelativeLayout>

</RelativeLayout>