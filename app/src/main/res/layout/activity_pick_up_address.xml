<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.medspaceit.appointments.activity.PickUpAddress">

    <android.support.v7.widget.CardView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Pick Up Address"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorWhite" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <com.kofigyan.stateprogressbar.StateProgressBar
        android:id="@+id/your_state_progress_bar_id3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        app:spb_animateToCurrentProgressState="false"
        app:spb_checkStateCompleted="false"
        app:spb_currentStateDescriptionColor="@color/accept"
        app:spb_currentStateNumber="three"
        app:spb_maxStateNumber="four"
        app:spb_stateBackgroundColor="#BDBDBD"
        app:spb_stateDescriptionColor="#808080"
        app:spb_stateForegroundColor="@color/accept"
        app:spb_stateNumberBackgroundColor="#808080"
        app:spb_stateNumberForegroundColor="#eeeeee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/your_state_progress_bar_id3"
            android:layout_weight="9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/patient_home_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/sign_text_shape"
                    android:orientation="horizontal"
                    android:padding="12dp">


                    <EditText
                        android:id="@+id/et_home_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="#fff"
                        android:gravity="top|left"
                        android:hint="Home Address"

                        android:inputType="textMultiLine"
                        android:lines="3"
                        android:maxLines="3"
                        android:minLines="3"
                        android:scrollbars="vertical"
                        tools:ignore="DuplicateIds" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/patient_landmark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/patient_home_address"
                    android:layout_margin="10dp"
                    android:background="@drawable/sign_text_shape"
                    android:orientation="horizontal"
                    android:padding="12dp">


                    <EditText
                        android:id="@+id/et_landmark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:background="#fff"
                        android:hint="Landmark"
                        android:maxLines="1"
                        android:singleLine="true"
                        tools:ignore="DuplicateIds" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/patient_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/patient_landmark"
                    android:layout_margin="10dp"
                    android:background="@drawable/sign_text_shape"
                    android:orientation="horizontal"
                    android:padding="12dp">


                    <EditText
                        android:id="@+id/et_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:background="#fff"
                        android:hint="City"
                        android:maxLines="1"
                        android:singleLine="true"
                        tools:ignore="DuplicateIds" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/patient_pincode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/patient_city"
                    android:layout_margin="10dp"
                    android:background="@drawable/sign_text_shape"
                    android:orientation="horizontal"
                    android:padding="12dp">


                    <EditText
                        android:id="@+id/et_pincode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:background="#fff"
                        android:hint="Pin Code"
                        android:inputType="number"
                        android:maxLength="6"
                        android:maxLines="1"
                        android:singleLine="true"
                        tools:ignore="DuplicateIds" />

                </LinearLayout>

                <Spinner
                    android:layout_width="match_parent"
                    android:id="@+id/labelSpinner"
                    android:layout_margin="10dp"
                    android:padding="3dp"
                    android:background="@drawable/sign_text_shape"
                    android:layout_height="50dp"/>


            </LinearLayout>


        </ScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_next_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/sign_button_shape"
                android:text="Next"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="17sp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
