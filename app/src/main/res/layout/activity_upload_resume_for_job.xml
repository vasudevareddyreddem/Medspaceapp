<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.UploadResumeForJob">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/img_js_upld_resume_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Upload Resume"

            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorWhite" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:text="Upload Your Resume"
            android:textSize="22sp"
            android:textColor="@color/colorAccent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:background="@drawable/boxborder_shape"
            android:gravity="center|start"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <Button
                android:id="@+id/btn_up_select_resume"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center|start"
                android:layout_weight="7"
                android:layout_margin="7dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="Choose File"

                android:textAllCaps="false"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/tv_select_resume_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|start"
                android:layout_weight="3"
                android:maxLines="1"
                android:lines="1"
                android:hint="No file chosen"
                android:gravity="center|start"
                android:padding="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp" />

        </LinearLayout>
        <Button
            android:id="@+id/btn_upload_new_resume"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/sign_button_shape"
            android:text="Submit"
            android:visibility="gone"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="15dp"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="18dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:background="@color/colorAccent"/>


    </LinearLayout>
</LinearLayout>