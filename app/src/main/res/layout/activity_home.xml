<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
  >
    <android.support.v7.widget.CardView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">
        <RelativeLayout
            android:layout_width="@dimen/actionBar"
            android:layout_height="@dimen/actionBar">

        <ImageView
            android:id="@+id/hamberger"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:src="@drawable/menu_toogle"
            android:layout_centerVertical="true"
            />
        </RelativeLayout>
       <RelativeLayout
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="match_parent">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:src="@drawable/medspaceposterlogo"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            />
       </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/actionBar"
            android:layout_height="@dimen/actionBar">


            <ImageView
                android:id="@+id/campnotification"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:src="@drawable/bell"
                android:layout_gravity="center"
                 />
            <TextView
                android:id="@+id/badge_home"
                android:layout_width="19dp"
                android:layout_alignParentRight="true"
                android:layout_height="19dp"
                android:background="@drawable/badge_item_count"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginRight="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="8sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>


    </android.support.v7.widget.CardView>
      <!--  <android.support.v7.widget.Toolbar

            app:popupTheme="@style/AppTheme.PopupOverlay" />-->



<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start"
    android:layout_below="@+id/toolbar"
    >
    <include
        layout="@layout/content_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



  <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_home"
        app:menu="@menu/activity_home_drawer"
        android:background="@drawable/nav_drawer_option_layer_list"
        app:itemIconTint="@color/colorWhite"
        app:itemTextColor="@color/colorWhite"
      android:theme="@style/NavigationDrawerStyle"

      />

</android.support.v4.widget.DrawerLayout>
</RelativeLayout>