<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.medarogya.appointment.activity.MedICashActivity">
    <android.support.v7.widget.CardView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="I-CASH"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorWhite" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/medwallet_ll"
        android:layout_below="@id/toolbar"
        >


        <RadioGroup
            android:id="@+id/wallet_type"

            android:layout_gravity="center"
            android:gravity="center"
            android:padding="25dp"
            android:layout_width="wrap_content"
            android:background="@drawable/boxborder_shape"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <RadioButton
                android:layout_width="150dp"
                android:layout_height="30dp"

                android:text="OP"
                android:id="@+id/rb_OP"
                android:textSize="17sp"
                />
            <RadioButton
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:id="@+id/rb_IP"
                android:layout_marginTop="20dp"

                android:textSize="17sp"
                android:text="IP" />

            <RadioButton
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:id="@+id/rb_lab"
                android:layout_marginTop="20dp"

                android:textSize="17sp"
                android:text="Lab" />




        </RadioGroup>





    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Submit"
            android:visibility="gone"
            android:textSize="17sp"
            android:id="@+id/btn_submit_wallet"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:layout_margin="2dp"
            android:background="@drawable/sign_button_shape"/>
    </LinearLayout>

</RelativeLayout>
