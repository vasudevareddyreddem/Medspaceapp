<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/ll_pmr"
    android:background="@drawable/boxborder_shape"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


        <ImageView
            android:id="@+id/img_pmr"
            android:layout_gravity="start|center"
            android:layout_width="120dp"
            android:scaleType="fitXY"
            android:layout_height="100dp"
            android:layout_margin="10dp" />
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_pmr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/btn_trackorder"
            android:layout_alignParentTop="true"
            android:gravity="center|start"
            android:layout_margin="5dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_trackorder"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:background="@drawable/boxborder_shape"
            android:text="Track Order"
            android:layout_marginRight="5dp"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="13sp"
            android:visibility="gone" />
        <Button
            android:id="@+id/btn_detailsorder"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:background="@drawable/boxborder_shape"
            android:text="View Order Details"
            android:layout_marginRight="5dp"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp"
            android:visibility="gone" />


    </RelativeLayout>


    </LinearLayout>
