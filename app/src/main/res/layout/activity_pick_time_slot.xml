<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.medarogya.appointment.activity.PickTimeSlot">
    <android.support.v7.widget.CardView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        >
        <RelativeLayout
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            >
            <ImageView
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/back"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select a time slot"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <com.kofigyan.stateprogressbar.StateProgressBar
        android:id="@+id/your_state_progress_bar_id1"
        android:layout_width="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_height="wrap_content"
        app:spb_currentStateNumber="one"
        app:spb_maxStateNumber="four"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:spb_stateBackgroundColor="#BDBDBD"
        app:spb_stateForegroundColor="@color/accept"
        app:spb_stateNumberBackgroundColor="#808080"
        app:spb_stateNumberForegroundColor="#eeeeee"
        app:spb_currentStateDescriptionColor="@color/accept"
        app:spb_stateDescriptionColor="#808080"
        app:spb_animateToCurrentProgressState="true"
        app:spb_checkStateCompleted="false"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/date_ll"
        android:layout_height="wrap_content"
        android:layout_below="@id/your_state_progress_bar_id1"
        android:layout_margin="@dimen/margin_space"
        android:background="@drawable/sign_text_shape"
        android:padding="12dp">

        <EditText
            android:id="@+id/et_select_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@color/colorWhite"
            android:clickable="true"
            android:focusableInTouchMode="false"
            android:hint="Date of Appointment"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/time_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_space"
        android:background="@drawable/sign_text_shape"
        android:onClick="openSingleChoice"
        android:orientation="horizontal"
        android:layout_below="@+id/date_ll"
        android:padding="10dp">

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Select Time"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:padding="8dp"
            android:src="@drawable/dropdown_icon" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Next"
            android:textSize="17sp"
            android:id="@+id/btn_next_a"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:layout_margin="2dp"
            android:background="@drawable/sign_button_shape"/>
    </LinearLayout>
</RelativeLayout>
