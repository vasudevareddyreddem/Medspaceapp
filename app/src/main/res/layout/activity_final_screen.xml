<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.medarogya.appointment.activity.FinalScreen">
<TextView
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_marginBottom="20dp"
    android:textSize="23sp"
    android:textColor="@color/colorBlack"
    android:text="Thanks for choosing us!!"
    android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/healthcard">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:id="@+id/card_No"

            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:editable="false"
            android:enabled="false"
            android:focusable="false"
            android:text="5645 4565 4566"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            tools:ignore="DuplicateIds" />

    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Card Number"
        android:textSize="18sp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="3dp"
        android:textColor="@color/colorBlack"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5435 3563 3466"
        android:textSize="18sp"
        android:paddingLeft="10dp"
        android:id="@+id/card_no"
        android:enabled="false"
        android:editable="false"

        android:focusable="false"
        android:background="@drawable/sign_text_shape"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="18sp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="3dp"
        android:textColor="@color/colorBlack"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RAM"
        android:textSize="18sp"
        android:paddingLeft="10dp"
        android:id="@+id/holder_name"
        android:background="@drawable/sign_text_shape"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mobile Number"
        android:textSize="18sp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="3dp"
        android:textColor="@color/colorBlack"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="9907449461"
        android:textSize="18sp"
        android:paddingLeft="10dp"
        android:id="@+id/phone_no"
        android:background="@drawable/sign_text_shape"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorPrimaryDark"/>


</LinearLayout>
