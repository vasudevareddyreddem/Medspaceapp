<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.medspaceit.appointments.activity.Lab">

    <android.support.v7.widget.CardView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Lab"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorWhite" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_margin="5dp"
android:id="@+id/options_ll"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:id="@+id/select_labtest_ll"
            android:gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/sign_text_shape"

            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:background="@drawable/labjar" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="3dp"
                android:text="Select Lab Test"
                android:textColor="@color/colorBlack"
                android:textSize="12sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:id="@+id/select_booklabtest_ll"
            android:layout_margin="5dp"
            android:background="@drawable/sign_text_shape"

            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/call" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Call To Book\n Lab Test"
                android:textColor="@color/colorBlack"
                android:textSize="12sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="5dp"
            android:id="@+id/select_myreport_ll"
            android:background="@drawable/sign_text_shape"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:background="@drawable/labreport" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="My Reports"
                android:textColor="@color/colorBlack"
                android:textSize="12sp" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Packages"
        android:id="@+id/Packages_txt"
        android:layout_below="@+id/options_ll"
        android:textColor="@color/colorBlack"
        android:textSize="15sp"
        android:layout_marginLeft="20dp"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_below="@+id/Packages_txt"
        android:id="@+id/package_recyclerview"
        android:layout_height="match_parent"
        />


</RelativeLayout>
