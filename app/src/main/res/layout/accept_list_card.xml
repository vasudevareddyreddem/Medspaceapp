<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/colorBlack"
        android:textSize="17sp"
        android:id="@+id/tv_date"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:elevation="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"

                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/status"
                    >
                    <TextView
                        android:id="@+id/status_lable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hospital Name :"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center_vertical|left"
                        />
                    <TextView
                        android:layout_toRightOf="@+id/status_lable"
                        android:id="@+id/tv_hospital_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hospital Name1"
                        android:gravity="center_vertical|left"
                        />
                </RelativeLayout>


            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/line"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                >

                <RelativeLayout
                    android:layout_toLeftOf="@+id/side_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="2dp"
                            android:layout_gravity="center"
                            android:gravity="center_vertical|left"
                            >
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/time"
                                android:layout_margin="2dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Slot Time:"
                                android:textStyle="bold"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:textColor="@color/colorPrimaryDark"
                                />
                            <TextView
                                android:id="@+id/tv_time_slot"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10:30 pm"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="2dp"
                            android:layout_gravity="center"
                            android:gravity="center_vertical|left"
                            >
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/doc"
                                android:layout_margin="2dp"

                                />
                            <TextView
                                android:id="@+id/dept_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Department Name:"
                                android:textStyle="bold"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:textColor="@color/colorPrimaryDark"

                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:paddingLeft="2dp"
                                android:id="@+id/tv_dpt_name"
                                android:layout_height="wrap_content" />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="2dp"
                            android:weightSum="2"
                            android:layout_gravity="center"
                            android:gravity="center_vertical|left"
                            >
                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:text="My Prescription"
                                android:layout_weight="1"
                                android:textSize="12sp"
                                android:layout_margin="2dp"
                                android:background="@drawable/sign_text_shape"
                                android:id="@+id/btn_my_rescription"
                                android:layout_gravity="center"/>

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:text="Lab Reports"
                                android:layout_margin="2dp"

                                android:background="@drawable/sign_text_shape"

                                android:layout_weight="1"
                                android:id="@+id/btn_lab_reports"
                                android:textSize="12sp"
                                android:layout_gravity="center"/>



                        </LinearLayout>


                    </LinearLayout>


                </RelativeLayout>
            </RelativeLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>