<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.medarogya.appointment.activity.PharmacyLabTest">

    <android.support.v7.widget.CardView
        android:id="@+id/cvpharmecylab"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            >
            <ImageView
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/back"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Lab Test"
                android:textColor="@color/colorWhite"
                />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/pharmacylab_scrollview"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_space"
                android:background="@drawable/sign_text_shape"
                android:padding="12dp">

                <EditText
                    android:id="@+id/pl_total_amount"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:inputType="number"
                    android:maxLines="1"
                    android:lines="1"
                    android:maxLength="7"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:hint="Total Amount"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                >
                <Button
                    android:id="@+id/btn_pl_scan"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="Scan"
                    android:background="@drawable/sign_button_shape"
                    android:textColor="@color/colorWhite"
                    />

            </RelativeLayout>







            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/pl_ll_for_fmount">


                <LinearLayout
                    android:id="@+id/pl_city_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_space"
                    android:background="@drawable/sign_text_shape"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/pl_city_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="Select City"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />



                </LinearLayout>
                <LinearLayout

                    android:id="@+id/pl_pharmacy_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_space"
                    android:background="@drawable/sign_text_shape"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/pl_pharmacy_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="Select Lab"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />



                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_space"
                android:background="@drawable/sign_text_shape"
                android:padding="12dp">

                <TextView
                    android:id="@+id/pl_pay_amount"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:maxLines="1"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:hint="Amount To Pay"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="15dp"
                android:padding="5dp"
                android:textStyle="bold"
                android:background="@color/accept"
                android:text="*Greetings you got a discount"
                android:textColor="@color/colorWhite"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                >
                <Button
                    android:id="@+id/btn_pl_submit"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="Submit"
                    android:background="@drawable/sign_button_shape"
                    android:textColor="@color/colorWhite"
                    />

            </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/pl_content_frame"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
